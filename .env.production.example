# Production Environment Configuration for FastAPI
# Copy this to .env.production and fill in your values

# Environment
ENVIRONMENT=production
DEBUG=False

# FastAPI Server
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8001
WORKERS=4

# Database (shared with Django)
DATABASE_URL=postgresql://noctispro:CHANGE_ME@localhost:5432/noctispro

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Security
DJANGO_SECRET_KEY=CHANGE_ME_TO_YOUR_DJANGO_SECRET_KEY
JWT_SECRET_KEY=CHANGE_ME_TO_RANDOM_SECRET

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60
ENABLE_RATE_LIMITING=True

# Caching
CACHE_ENABLED=True
CACHE_TTL_DEFAULT=3600
CACHE_TTL_IMAGES=1800
CACHE_TTL_METADATA=7200

# Security
ENABLE_CORS=True
REQUIRE_AUTHENTICATION=False  # Set to True in production if using auth

# Monitoring
ENABLE_METRICS=True
LOG_LEVEL=INFO

# File Storage
MEDIA_ROOT=/workspace/media

# Performance
MAX_CONNECTIONS=100
KEEP_ALIVE=5
