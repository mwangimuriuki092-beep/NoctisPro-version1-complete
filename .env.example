# =============================================================================
# NoctisPro PACS - Environment Configuration Template
# =============================================================================
# Copy this file to .env and configure your environment

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your-secret-key-here-replace-this-with-random-50-chars

# Debug mode (NEVER use True in production)
DEBUG=False

# =============================================================================
# DEPLOYMENT MODE
# =============================================================================
# Choose one deployment mode:
# - internet: Public internet access with HTTPS
# - tailnet: Private network via Tailscale
# - local: Local development
DEPLOYMENT_MODE=local

# =============================================================================
# INTERNET ACCESS CONFIGURATION
# =============================================================================
INTERNET_ACCESS=false
USE_HTTPS=false
DOMAIN_NAME=localhost

# SSL Configuration (for internet deployment)
SSL_CERTIFICATE_PATH=/etc/ssl/certs/noctispro.crt
SSL_CERTIFICATE_KEY_PATH=/etc/ssl/private/noctispro.key

# =============================================================================
# TAILSCALE CONFIGURATION
# =============================================================================
USE_TAILNET=false
TAILNET_HOSTNAME=noctispro
TAILSCALE_AUTH_KEY=

# =============================================================================
# ALLOWED HOSTS
# =============================================================================
# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database engine: sqlite3, postgresql, mysql
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# PostgreSQL specific (if using PostgreSQL)
POSTGRES_DB=noctispro
POSTGRES_USER=noctispro
POSTGRES_PASSWORD=
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_DB=1

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@noctispro.local
ADMIN_EMAIL=admin@noctispro.local

# =============================================================================
# MEDIA & STATIC FILES
# =============================================================================
MEDIA_ROOT=/var/noctispro/media
STATIC_ROOT=/var/noctispro/static
DICOM_ROOT=/var/noctispro/dicom
SERVE_MEDIA_FILES=True

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
AI_MODELS_PATH=/var/noctispro/ai_models
AI_ENABLE_AUTO_ANALYSIS=True
AI_ANALYSIS_WORKERS=2
AI_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# DICOM NETWORKING
# =============================================================================
DICOM_AE_TITLE=NOCTISPRO
DICOM_PORT=11112
DICOM_SCP_ENABLED=True
DICOM_STORE_DIR=/var/noctispro/dicom

# =============================================================================
# SESSION & SECURITY
# =============================================================================
SESSION_COOKIE_AGE=3600
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SECURE=False
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Lax

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/noctispro/noctispro.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=True
BACKUP_DIR=/var/backups/noctispro
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# PERFORMANCE & LIMITS
# =============================================================================
FILE_UPLOAD_MAX_SIZE=5368709120
DATA_UPLOAD_MAX_MEMORY_SIZE=5368709120
MAX_CONCURRENT_UPLOADS=5
THUMBNAIL_CACHE_TIMEOUT=3600

# =============================================================================
# MONITORING & METRICS
# =============================================================================
ENABLE_METRICS=True
METRICS_PORT=9090
SENTRY_DSN=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_AI_ANALYSIS=True
FEATURE_3D_RECONSTRUCTION=True
FEATURE_CHAT=True
FEATURE_NOTIFICATIONS=True
FEATURE_INVOICING=True
FEATURE_AUDIT_LOG=True

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEV_TOOLBAR_ENABLED=False
SHOW_DEBUG_TOOLBAR=False
