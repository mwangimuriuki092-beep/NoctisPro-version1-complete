# NoctisPro PACS Docker Configuration with Tailscale
# Copy this file to .env and configure your settings

# Tailscale Configuration (Required)
TAILSCALE_AUTH_KEY=your_tailscale_auth_key_here
TAILNET_HOSTNAME=noctispro

# Application Configuration
DEBUG=False
SECRET_KEY=your_secret_key_here_change_in_production

# Database Configuration
POSTGRES_PASSWORD=noctis_secure_password_change_this

# Build Configuration
BUILD_TARGET=production

# Optional: Custom domain if using Tailscale with custom domain
# CUSTOM_DOMAIN=noctispro.yourdomain.com

# Security Settings
ALLOWED_HOSTS=noctispro,localhost,127.0.0.1,*.ts.net,100.*

# AI Configuration (Optional)
ENABLE_AI_PROCESSING=true

# Logging Level
LOG_LEVEL=INFO